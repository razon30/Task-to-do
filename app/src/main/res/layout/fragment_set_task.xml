            <!--</LinearLayout>-->


        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="Or Set By Yourself"
            android:textSize="18sp"
            android:textColor="@color/colorPlainText"
        />

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal"
        >

            <com.rey.material.widget.Button
                android:id="@+id/timeDate"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:textColor="@color/colorPlainText"
                android:background="@color/colorButtonOption"
                android:text="Time Date"
                app:rd_enable="true"
                app:rd_maskType="oval"
                app:rd_rippleColor="@color/colorbutton"
                app:rd_style="@style/Material.Drawable.Ripple.Touch.MatchView.Light"/>

            <TextView
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="OR"
                android:textColor="@color/colorPlainText"
                android:textSize="18sp"
            />

            <com.rey.material.widget.Button
                android:id="@+id/timeAfter"
                android:layout_width="0dp"
                android:textColor="@color/colorPlainText"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/colorButtonOption"
                android:text="time After"
                app:rd_enable="true"
                app:rd_maskType="oval"
                app:rd_rippleColor="@color/colorbutton"
