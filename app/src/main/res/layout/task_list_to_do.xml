<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="horizontal"
    android:background="@android:color/transparent"
  >

    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/rect_red"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/todosize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/appwidget_text"
            android:textColor="#9e2a2a"
            android:textSize="24sp"
           />

        <TextView
            android:id="@+id/remainbelow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="task ToDo"
            android:textColor="#212121"
            android:textSize="16sp"
           />


    </LinearLayout>
    <LinearLayout
        android:padding="5dp"
        android:background="@drawable/rect_red"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/remainsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/appwidget_text"
            android:textColor="#9e2a2a"
            android:textSize="24sp"/>


        <TextView
            android:id="@+id/todobelow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="Task Remaining"
            android:textColor="#212121"
            android:textSize="16sp" />
    </LinearLayout>




</LinearLayout>