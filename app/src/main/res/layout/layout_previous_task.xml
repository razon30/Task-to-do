<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/techfie_logo"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <techfie.razon.tasktodo.MyTextView
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Techfie"
                android:textColor="@color/text"
                android:textSize="28sp"
                />
            <techfie.razon.tasktodo.MyTextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A creative Development Company"
                android:textColor="@color/subtext"
                android:textSize="14.5sp"
                />

            <techfie.razon.tasktodo.MyTextView
                android:id="@+id/load_techfie"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View"
                android:textColor="#FF8800"
                android:textSize="19sp"
                android:layout_gravity="left"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/load_innova"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/innova"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <techfie.razon.tasktodo.MyTextView
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Innova"
                android:textColor="@color/text"
                android:textSize="28sp"
                />
            <techfie.razon.tasktodo.MyTextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Engineering and Consultant ltd."
                android:textColor="@color/subtext"
                android:textSize="14.5sp"
                />

            <techfie.razon.tasktodo.MyTextView
                android:id="@+id/load_innova"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View"
                android:textColor="#FF8800"
                android:textSize="19sp"
                android:layout_gravity="left"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/load_innova"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:src="@drawable/ju_logo"
            />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            android:gravity="center"
            >

            <techfie.razon.tasktodo.MyTextView
                android:layout_marginTop="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Access To JU"
                android:textColor="@color/text"
                android:textSize="28sp"
                />
            <techfie.razon.tasktodo.MyTextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A complete helping hand for Jahangirnagar University Admission Candidates"
                android:textColor="@color/subtext"
                android:textSize="14.5sp"
                />

            <techfie.razon.tasktodo.MyTextView
                android:id="@+id/get_aj"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get The App"
                android:textColor="#21e6b1"
                android:textSize="19sp"
                android:layout_gravity="left"
                android:drawablePadding="20dp"
                android:drawableRight="@drawable/get_app"
                />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>